<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardUseCompatPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<View-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:id="@+id/grid_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="250dp"/>-->
        <co.mide.imagegridlayout.ImageGridLayout
            android:layout_marginTop="2dp"
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            app:maxImageCount="@integer/image_count"
            app:moreColor="#0f0f0f"
            android:layout_height="250dp"/>
        <TextView
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorFadedText"
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:text="19 hours ago"
            android:layout_below="@+id/grid_layout"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/post_time"
            android:id="@+id/title"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="wrap_content"
            android:text="Random wallpapers from my dump"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:textColor="@color/colorFadedText"
            android:layout_width="wrap_content"
            android:layout_below="@+id/title"
            android:id="@+id/by"
            android:text="@string/by"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:id="@+id/username"
            android:layout_toEndOf="@+id/by"
            android:layout_toRightOf="@+id/by"
            android:layout_width="wrap_content"
            android:text="@string/sample_username"
            android:layout_below="@+id/title"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ic_disco_white_36dp"
            android:scaleType="matrix"
            android:paddingEnd="64dp"
            android:paddingRight="64dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:layout_width="100dp"
            android:visibility="gone"
            android:background="@drawable/ribbon"
            android:layout_height="72dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>