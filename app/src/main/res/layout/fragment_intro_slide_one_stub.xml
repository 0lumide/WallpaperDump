<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_guitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_guitar_description"
        android:src="@drawable/guitar" />
    <ImageView
        android:id="@+id/image_fork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="90dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/image_fork_description"
        android:src="@drawable/fork" />
    <ImageView
        android:id="@+id/image_banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/image_banana_description"
        android:src="@drawable/banana" />
</RelativeLayout>