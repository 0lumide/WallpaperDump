<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_cera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_disco_ball"
        android:contentDescription="@string/image_cera_description"
        android:src="@drawable/cera" />
    <ImageView
        android:id="@+id/image_disco_ball"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_disco_description"
        android:src="@drawable/ic_disco_black_36dp" />
</RelativeLayout>